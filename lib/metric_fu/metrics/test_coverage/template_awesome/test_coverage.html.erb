<style data-file="test_coverage.css">
<%=  inline_css('css/test_coverage.css') %>
</style>
<h3>TestCoverage Code Coverage Results</h3>

<p>C0 code coverage information.</p>

<% graph_name = 'test_coverage' %>
<canvas id="graph"></canvas>
<script language="javascript" src="<%= graph_name %>.js?<%= Time.now.to_i %>" type="text/javascript"></script>

<p>Total Coverage: <%= @test_coverage.delete(:global_percent_run) %>% </p>
<table>
  <tr>
    <th>File Path</th>
    <th>Percent run</th>
  </tr>
  <% count = 0 %>
  <% @test_coverage.sort_by{ |k,v| v[:percent_run] }.each do |fname, file| %>
    <tr>
      <td><a href="#<%= fname.gsub(/[^a-z]+/, '_') %>"><%= fname %></a></td>
      <td><%= file[:percent_run] %></td>
    </tr>
    <% count += 1 %>
  <% end %>
</table>

<% @test_coverage.sort_by{ |k,v| v[:percent_run] }.each do |fname, file| %>
  <h2 id="<%= fname.gsub(/[^a-z]+/, '_') %>"> <%= fname %></h2>
  <div class="test_coverage_overflow">
    <table class="test_coverage_code">
    <% file[:lines].each_with_index do |line, index| %>
      <tr>
        <% css_class = line[:was_run] ? "test_coverage_run" : "test_coverage_not_run" %>
        <td class="<%= css_class %>"><%= link_to_filename(fname, index + 1, "<pre>#{line[:content]}</pre>") %></td>
      </tr>
    <% end %>
    </table>
  </div>
<% end %>
<p>Generated on <%= Time.now.localtime %></p>
